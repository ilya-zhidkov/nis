        <TextBox x:Name="textBox1" HorizontalAlignment="Left" Height="59" Margin="90,250,0,0" TextWrapping="Wrap" Text="{Binding tst0,Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" VerticalAlignment="Top" Width="267" FontSize="18"/>
        <Button x:Name="button1" Content="Button" HorizontalAlignment="Left" Margin="460,250,0,0" VerticalAlignment="Top" Width="76" Click="button1_Click"/>
    </Grid>
</Window>
