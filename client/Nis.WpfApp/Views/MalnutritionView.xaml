<UserControl
    x:Class="Nis.WpfApp.Views.MalnutritionView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Nis.WpfApp.Views"
    mc:Ignorable="d"
    d:DesignHeight="Auto"
    d:DesignWidth="Auto"
>
    <Grid Margin="0 40 0 40">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Label
            Grid.Row="0"
            FontSize="14"
            Margin="20 0 0 0"
            FontFamily="Arial Black"
            VerticalAlignment="Center"
            HorizontalAlignment="Left"
            Content="Hodnocení nutričního stavu"
        />
        <ScrollViewer
            Grid.Row="1"
            Width="760"
            Margin="20 0 0 0"
            VerticalAlignment="Stretch"
            HorizontalAlignment="Stretch"
        >
            <StackPanel>
                <Grid Margin="20 20 0 0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="50" />
                        <RowDefinition Height="150" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition />
                        <ColumnDefinition />
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>
                    <Label
                        Grid.Row="0"
                        Grid.Column="0"
                        FontSize="18"
                        Margin="0 0 0 0"
                        Content="Činnosti"
                        FontFamily="Arial Black"
                        VerticalAlignment="Center"
                        HorizontalAlignment="Center"
                    />
                    <Label
                        Grid.Row="0"
                        Grid.Column="1"
                        FontSize="18"
                        Margin="0 0 0 0"
                        FontFamily="Arial Black"
                        Content="Provedení činnosti"
                        VerticalAlignment="Center"
                        HorizontalAlignment="Center"
                    />
                    <Label
                        Grid.Row="0"
                        FontSize="18"
                        Grid.Column="2"
                        Margin="0 0 0 0"
                        Content="Bodové skóre"
                        FontFamily="Arial Black"
                        VerticalAlignment="Center"
                        HorizontalAlignment="Center"
                    />
                    <TextBlock
                        Grid.Row="1"
                        Grid.Column="0"
                        FontSize="15"
                        Margin="20,20,20,0"
                        VerticalAlignment="Top"
                        FontFamily="Arial Black"
                        Text="A. Jíte méně v posledních 3 měsících?"
                        HorizontalAlignment="Stretch"
                        TextWrapping="WrapWithOverflow"
                    />
                    <CheckBox
                        Grid.Row="1"
                        FontSize="15"
                        Grid.Column="1"
                        Margin="20 20 0 0"
                        FontFamily="Arial Black"
                        VerticalAlignment="Top"
                        HorizontalAlignment="Left"
                        Content="ano, výrazně méně"
                    />
                    <CheckBox
                        Grid.Row="1"
                        Grid.Column="1"
                        FontSize="15"
                        Margin="20 0 0 0"
                        Content="ano,trochu méně"
                        FontFamily="Arial Black"
                        VerticalAlignment="Center"
                        HorizontalAlignment="Left"
                    />
                    <CheckBox
                        Grid.Row="1"
                        Grid.Column="1"
                        FontSize="15"
                        Margin="20 0 0 20"
                        FontFamily="Arial Black"
                        VerticalAlignment="Bottom"
                        HorizontalAlignment="Left"
                        Content="ne, jím pořád stejně"
                    />
                    <Label
                        Content="0"
                        Grid.Row="1"
                        FontSize="18"
                        Grid.Column="2"
                        Margin="20 20 0 0"
                        VerticalAlignment="Top"
                        FontFamily="Arial Black"
                        HorizontalAlignment="Center"
                    />
                    <Label
                        Grid.Row="1"
                        Content="1"
                        FontSize="18"
                        Grid.Column="2"
                        Margin="20 0 0 0"
                        FontFamily="Arial Black"
                        VerticalAlignment="Center"
                        HorizontalAlignment="Center"
                    />
                    <Label
                        Grid.Row="1"
                        Content="2"
                        FontSize="15"
                        Grid.Column="2"
                        Margin="20 0 0 20"
                        FontFamily="Arial Black"
                        VerticalAlignment="Bottom"
                        HorizontalAlignment="Center"
                    />
                </Grid>
                <TextBlock
                    Width="720"
                    Height="170"
                    FontSize="14"
                    Margin="20 20 0 0"
                    FontFamily="Arial"
                    TextWrapping="Wrap"
                    HorizontalAlignment="Left"
                    Text="Doplňující informace"
                />
            </StackPanel>
        </ScrollViewer>
        <StackPanel
            Grid.Row="2"
            Margin="0 0 0 0"
            Orientation="Horizontal"
            VerticalAlignment="Center"
            HorizontalAlignment="Center"
        >
            <Button
                Content="1"
                Margin="0 0 10 0"
                x:Name="Activity"
            />
            <Button
                Content="2"
                x:Name="Decubitus"
                Margin="0 0 10 0"
            />
            <Button
                Content="3"
                Cursor="Hand"
                Margin="0 0 10 0"
                Background="Orange"
            />
            <Button
                x:Name="Fall"
                Content="4"
            />
        </StackPanel>
    </Grid>
</UserControl>
