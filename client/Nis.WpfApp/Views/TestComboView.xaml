        <Button x:Name="ShowComboBox" Content="Potvrdit" HorizontalAlignment="Left" Margin="879,327,0,0" VerticalAlignment="Top" Width="96" Height="36" FontSize="14" IsEnabled="False" FontWeight="Bold" Foreground="White" Background="#DD000000">
