<Window
    x:Name="Win"
    x:Class="Nis.WpfApp.Views.ShellView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Title="Nemocniční Informační Systém"
    Height="510"
    Width="830"
    ResizeMode="NoResize"
    WindowStartupLocation="CenterScreen"
    HorizontalAlignment="Center"
    VerticalAlignment="Center"
>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"></RowDefinition>
            <RowDefinition Height="450"></RowDefinition>
        </Grid.RowDefinitions>
        <Rectangle Grid.Row="0" Fill="Gray" />
        <Rectangle Grid.Row="1" Fill="AliceBlue" />
        <TextBlock
            Grid.Row="0"
            FontSize="16"
            x:Name="Username"
            Text="{Binding Username, StringFormat='{}Ahoj, {0}!'}"
            FontWeight="Medium"
            Margin="0, 0, 30, 0"
            HorizontalAlignment="Right"
            VerticalAlignment="Center"
            Foreground="{StaticResource PrimaryHueDarkForegroundBrush}"
        />
        <StackPanel
            Grid.Row="0"
            Orientation="Horizontal"
            VerticalAlignment="Center"
        >
            <Button
                x:Name="btn_pac"
                Content="Vypis Pacientů"
                Margin="10, 0, 0, 0"
            />
            <Button
                x:Name="btn_tst"
                Content="Testovani"
                Margin="10, 0, 0, 0"
            />
        </StackPanel>
        <ContentControl
            Grid.Row="1"
            x:Name="ActiveItem"
            Margin="0, 0, 0, 20"
        />
    </Grid>
</Window>
